<MyLayout>
    GridLayout:
        cols: 1
        rows: 2
        size: root.width,root.height
        TextInput:
            halign: "right"
            font_size: 50
            text: "0"
            id: Id_Label
        
        GridLayout:
            rows: 5
            cols: 4
            Button:
                text:"AC"
                on_press: root.press1()
                background_color:(.6,.6,.6,.8)
            Button:
                text:"C"
                on_press: root.press2()
                background_color:(.6,.6,.6,.8)
            Button:
                text:"%"
                on_press: root.press3()
                background_color:(.6,.6,.6,.8)
            Button:
                text:"**"
                on_press: root.press4()
                background_color:(.6,.6,.6,.8)
            Button:
                text:"7"
                on_press: root.press5()
            Button:
                text:"8"
                on_press: root.press6()
            Button:
                text:"9"
                on_press: root.press7()
            Button:
                text:"/"
                on_press: root.press8()
                background_color:(.6,.6,.6,.8)
            Button:
                text:"4"
                on_press: root.press9()
            Button:
                text:"5"
                on_press: root.press10()
            Button:
                text:"6"
                on_press: root.press11()
            Button:
                text:"*"
                on_press: root.press12()
                background_color:(.6,.6,.6,.8)
            Button:
                text:"1"
                on_press: root.press13()
            Button:
                text:"2"
                on_press: root.press14()
            Button:
                text:"3"
                on_press: root.press15()
            Button:
                text:"-"
                on_press: root.press16()
                background_color:(.6,.6,.6,.8)
            Button:
                text:"0"
                on_press: root.press17()
            Button:
                text:"."
                on_press: root.press18()
            Button:
                text:"="
                on_press: root.press19()
                background_color:(.6,.6,.6,.8)
            Button:
                text:"+"
                on_press: root.press20()
                background_color:(.6,.6,.6,.8)
                